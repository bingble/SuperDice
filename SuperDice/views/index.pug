block content
  .image-container.set-full-height(style="background-image: url('/img/wizard-city.jpg')")
      // users
      //a(href='#')
        .logo-container
          .logo
            img(src='/img/new_logo.png')
          .brand
            | Login
      nav.navbar.navbar-inverse
          .container-fluid
